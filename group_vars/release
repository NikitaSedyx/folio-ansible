---
# Variables for building a FOLIO release
auth_required: true
load_mods_larger: true
enable_okapi: true
folio_install_type: single_server

deploy_url: https://raw.githubusercontent.com/folio-org/platform-complete/R2-2021/okapi-install.json
enable_url: https://raw.githubusercontent.com/folio-org/platform-complete/R2-2021/stripes-install.json

#update_launch_descr: true
# Need to use xenial repo for Okapi 3.x
folio_apt_repos:
  - focal
okapi_version: 4.8.2
okapi_java_opts:
  - "-Ddeploy.waitIterations=90"
save_install: no
minio_port: 9500
# used in okapi-tenant-deploy
deploy_timeout: 1800


# proxy edge modules - folio-elb
include_edge_elb: true

# used in build-module-list role
stripes_exclude_list:
  - folio_eslint-config-stripes
  - folio_react-intl-safe-html
  - folio_stripes
  - folio_platform-core
  - folio_platform-complete
  - folio_platform-erm
  - folio_stripes-erm-components

# load ref and sample data
tenant_parameters:
  - name: loadReference
    value: "true"
  - name: loadSample
    value: "true"

# Some modules require special initialization parameters.
folio_modules:
  - name: mod-data-export
    deploy: yes
    docker_env:
      - name: AWS_ACCESS_KEY_ID
        value: "{{ data_export_aws_id | default('') }}"
      - name: AWS_SECRET_ACCESS_KEY
        value: "{{ data_export_aws_secret | default('') }}"
      - name: JAVA_OPTIONS
        value: "-XX:MaxRAMPercentage=66.0 -Dbucket.name={{ data_export_bucket_name | default('') }}"

  - name: mod-data-export-worker
    deploy: yes
    docker_env:
      - name: AWS_ACCESS_KEY_ID
        value: "{{ data_export_aws_id | default('minioadmin') }}"
      - name: AWS_SECRET_ACCESS_KEY
        value: "{{ data_export_aws_secret | default('minioadmin') }}"
      - name: AWS_URL
        value: "{{ data_export_aws_url | default('https://s3.amazonaws.com') }}"
      - name: AWS_REGION
        value: "{{ aws_region | default('') }}"
      - name: AWS_BUCKET
        value: "{{ data_export_bucket_name | default('data-export-bucket') }}"

  - name: mod-pubsub
    deploy: yes
    docker_env:
      - name: OKAPI_URL
        value: "{{ okapi_url }}"
      - name: SYSTEM_USER_NAME
        value: pubsub-user
      - name: SYSTEM_USER_PASSWORD
        value: pubsub2021

  - name: mod-search
    deploy: yes
    docker_env:
      - name: ELASTICSEARCH_URL
        value: "http://{{ ansible_default_ipv4.address }}:9301"
      - name: OKAPI_URL
        value: "{{ okapi_url }}"
      - name: JAVA_OPTIONS
        value: "-XX:MaxRAMPercentage=66.0"
      - name: KAFKA_EVENTS_CONSUMER_PATTERN
        value: "FOLIO\\.(.*\\.)inventory\\.(instance|holdings-record|item)"

  - name: mod-source-record-storage
    deploy: yes
    docker_env:
      - name: OKAPI_URL
        value: "{{ okapi_url }}"

# Variables for building UI
stripes_github_project: https://github.com/folio-org/platform-complete
stripes_github_version: R2-2021
folio_npm_repo: npm-folio
platform_remove_lock: false
with_sourcemap: false
node_environment:
   NODE_ENV: production

# Jobs for folioCronService
folio_cron_jobs:
  - name: scheduled-age-to-lost-fee-charging
    cron_time: "15,45 * * * *"
    api_path: "/circulation/scheduled-age-to-lost-fee-charging"
    method: POST
  - name: scheduled-age-to-lost
    cron_time: "0,30 * * * *"
    api_path: "/circulation/scheduled-age-to-lost"
    method: POST

